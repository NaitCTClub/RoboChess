<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="MainGrid">
        <Image HorizontalAlignment="Center" Cursor="None" Source="Resources/ChessBoard.PNG"/>
        <DockPanel>
            <StackPanel  DockPanel.Dock="Left" Width="222"></StackPanel>
            <UniformGrid  Name="UI_DockRight" DockPanel.Dock="Right" Width="215"></UniformGrid>
            <Label Name ="lHeader" DockPanel.Dock="Top" Height="37" Background="AliceBlue" Opacity="0.8" Content="May the best Man/Bot Win!" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"></Label>
            <UniformGrid DockPanel.Dock="Bottom" Width="200" Height="37" ></UniformGrid>
            <UniformGrid Loaded="MyMainPanel_Loaded" Name="MyMainPanel" HorizontalAlignment="Center" VerticalAlignment="Center">

            </UniformGrid>
        </DockPanel>
    </Grid>
</Window>
